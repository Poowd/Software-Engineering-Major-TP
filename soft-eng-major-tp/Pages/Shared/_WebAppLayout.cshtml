<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - soft_eng_major_tp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <main class="w-100" style="height: 100vh">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark">
                <div class="mx-5">
                    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="offcanvas" data-bs-target="#SideBarOffCanvas" aria-controls="SideBarOffCanvas">
                        ☰
                    </button
                </div>
            </nav>
        </header>
        <nav>
            
        </nav>

        <div class="offcanvas offcanvas-start bg-dark text-light" tabindex="-1" id="SideBarOffCanvas" aria-labelledby="SideBar">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="SideBar">Game Pub</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="NavigationList px-3">
                    <a style="text-decoration: none" class="text-light p-3" asp-area="" asp-page="/Private/Dashboard"><h5>Dashboard</h5></a>
                    <a style="text-decoration: none" class="text-light p-3" asp-area="" asp-page="/Private/Store"><h5>Store Tab</h5></a>
                    <a style="text-decoration: none" class="text-light p-3" asp-area="" asp-page="/Private/Users"><h5>Users Tab</h5></a>
                    <a style="text-decoration: none" class="text-light p-3" asp-area="" asp-page="/Private/Community"><h5>Community Tab</h5></a>
                    <a style="text-decoration: none" class="text-light p-3" asp-area="" asp-page="/Private/Events"><h5>Events Tab</h5></a>
                    <a style="text-decoration: none" class="text-light p-3" asp-area="" asp-page="/Index"><h5>Logout</h5></a>
                </div>
            </div>
        </div>

        <section>
            <div>
                @RenderBody()
            </div>
        </section>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
